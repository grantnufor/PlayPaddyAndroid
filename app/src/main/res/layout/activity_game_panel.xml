<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context=".GamePanelActivity">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textViewSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Subject"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:typeface="serif"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textViewYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Year"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:typeface="serif"
                    android:textSize="12dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textViewExamTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Exam Time"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/White"
                    android:typeface="serif"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewQuestionInstruction"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Question Instruction"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/Red"
                android:typeface="serif"
                android:textSize="12dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/textViewQuestionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="Question Status"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/LightGreen"
                android:typeface="serif"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/editTextQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_edit_border_grey"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textColor="@color/White"
                android:typeface="serif"
                android:textSize="12dp"
                android:padding="10dp"
                android:enabled="false"
                android:editable="true">

                <requestFocus />
            </EditText>

            <RadioButton
                android:id="@+id/radioButtonOptionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioButtonOptionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioButtonOptionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioButtonOptionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:typeface="serif" />

            <RadioButton
                android:id="@+id/radioButtonOptionE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RadioButton"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:typeface="serif" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPrevious"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/dark_blue_button"
                    android:text="&lt;&lt;Previous"
                    android:textColor="@color/White"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/dark_blue_button"
                    android:text="Next>>"
                    android:textColor="@color/White"
                    android:textSize="12dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/btnPrevious"
                    android:layout_toEndOf="@+id/btnPrevious" />

            </LinearLayout>


        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>